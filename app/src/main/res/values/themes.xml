<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="MyTextStyleRegular" parent="android:Widget.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/overpass_regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MyTextStyleBold" parent="android:Widget.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/overpass_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MyTextStyleLight" parent="android:Widget.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/overpass_light</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="MyTextStyleSemiBold" parent="android:Widget.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/overpass_semi_bold</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>